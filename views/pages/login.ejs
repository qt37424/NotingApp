<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include ("../partials/head"); %>
  </head>
  <body>
    <%- include ("../partials/header"); %>

    <div class="container">
      <% if (message.length > 0) { %>
      <div class="alert alert-warning alert-dismissible fade in" role="alert">
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
        <strong>Ohps!</strong> <%= message %>.
      </div>
      <% } %>
      <form class="form-login" action="/api/users/login" method="POST">
        <h2 class="form-login-heading">LOGIN into app</h2>
        <label for="inputName" class="sr-only">Username</label>
        <input
          type="name"
          id="username"
          name="username"
          class="form-control"
          placeholder="Username"
          required=""
        />
        <label for="inputPassword" class="sr-only">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Password"
          required=""
        />
        <br />
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          LOGIN
        </button>
        <br />
        <p>Don't have an account? <a href="/views/signup">Signup</a> ,it's free.</p>
      </form>
    </div>

    <%- include ("../partials/footer"); %> 
  </body>
</html>
